<resources>

    <!-- Base application theme. -->
    <style name="Theme.LakshayClosedPRs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_700</item>
        <item name="colorPrimaryVariant">@color/black_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sage_green_200</item>
        <item name="colorSecondaryVariant">@color/sage_green_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/black_200</item>

        <item name="android:textColor">@color/white</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.LakshayClosedPRs.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LakshayClosedPRs.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>